doctype html
html
  head
    meta(charset='utf-8')
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='width=device-width, initial-scale=1', name='viewport')
    title= 'Food Around Me | ' + title
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
    link(rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css")
    link(href='/css/jquery-ui-timepicker.css?v=0.3.3', rel='stylesheet')
    <!--[if lt IE 9 ]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  body
    .container
      .header
        ul.nav.nav-pills.pull-right
          li
            a(href='/') Home
          if user
            li
              a(href='/dashboard') Dashboard
            li
              a(href='/logout') Logout
          else
            li
              a(href='/login') Login
        h3 Food Around Me
        ul.nav.nav-pills
          li 
            a(href='/foodoffer') Browse Offers
          if user
            li
              a(href='/foodoffer/new') Add Offer
          if user
            div.loginuser login: #{user.username}
      block body
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js')
    script(src='/js/jquery-ui-timepicker.js?v=0.3.3')
    script(src='/js/bootstrap.min.js')
    script(src='/js/main.js')